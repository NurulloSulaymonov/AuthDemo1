@model List<Product>
@{
    int counter = 1;
}
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Handle</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <th scope="row">@counter</th>
            <td>@product.Firstname</td>
            <td>@product.Lastname</td>
            <td>@product.Handle</td>
        </tr>
        counter++;
        
    }
    

    </tbody>
</table>